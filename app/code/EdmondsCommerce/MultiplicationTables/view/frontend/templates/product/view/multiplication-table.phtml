/**
 * Product view template
 *
 * @var $block \EdmondsCommerce\MultiplicationTables\Block\Product\View\MultiplicationTab
 */
?>
<?php
$_product = $block->getProduct();

if (!$_product instanceof \Magento\Catalog\Model\Product) {
    return;
}
$isVisible = $block->isVisibleMultiplicationTable($_product);
if($isVisible) :
    $xAxis = (int) $_product->getXAxis();
    $yAxis = (int) $_product->getYAxis();
?>
<div class="product attribute">
    <div class="value">
    	<table border="1">
            <?php for ($r = 1; $r <= $yAxis; $r++) { ?>
                <tr>
                    <?php for ($c = 1; $c <= $xAxis; $c++) { ?>
                        <td><?= ($c * $r) ?></td>
                    <?php } ?>
                </tr>
            <?php } ?>
  		</table>
    </div>
</div>
<?php endif; ?>