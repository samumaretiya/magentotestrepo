<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.details">
            <block class="EdmondsCommerce\MultiplicationTables\Block\Product\View\MultiplicationTab" 
                name="product.attributes.multiplication.table" 
                as="multiplication.table" 
                template="EdmondsCommerce_MultiplicationTables::product/view/multiplication-table.phtml" 
                group="detailed_info">
                <arguments>
                    <argument translate="true" name="title" xsi:type="string">Multiplication Table</argument>
                    <argument name="sort_order" xsi:type="string">200</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
