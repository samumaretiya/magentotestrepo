<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="edmondscommerce" translate="label" sortOrder="300">
            <label>Edmonds Commerce</label>
        </tab>
        <section id="multiplication_table" translate="label" type="text" sortOrder="1001" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Multiplication Tables</label>
            <tab>edmondscommerce</tab>
            <resource>EdmondsCommerce_MultiplicationTables::config_module</resource>
            <group id="general" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General Options</label>
                <field id="enabled" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Enable Module</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="tab_title" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Tab Title</label>
                    <comment>Default Title: "Multiplication Table".</comment>
                </field>
            </group>
        </section>
    </system>
</config>
